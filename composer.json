{
    "name": "barryvdh/laravel-form-bridge",
    "description": "This packages integrates Symfony Form Component in Laravel.",
    "keywords": ["laravel", "form", "formbuilder", "forms"],
    "license": "MIT",
    "authors": [
        {
            "name": "Barry vd. Heuvel",
            "email": "barryvdh@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "illuminate/support": "5.1.x|5.2.x|5.3.x|5.4.x",
        "symfony/form": "^3",
        "symfony/validator": "^3",
        "symfony/twig-bridge": "^3",
        "twig/twig": "~1.30|~2.0"
    },
    "autoload": {
        "psr-4": {
            "Barryvdh\\Form\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.3-dev"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.3",
        "orchestra/testbench": "3.x",
        "phpunit/phpunit": "^4.8|^5.2"
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 src/",
        "fix-style": "phpcbf -p --standard=PSR2 src/"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
